{
  "version": 2,

  "builds": [
    { "src": "index.html",           "use": "@vercel/static" },
    { "src": "getting-started.html", "use": "@vercel/static" },
    { "src": "tooling-setup.html",   "use": "@vercel/static" },
    { "src": "cicd-pipelines.html",  "use": "@vercel/static" },
    { "src": "styles.css",           "use": "@vercel/static" },
    { "src": "public/**",            "use": "@vercel/static" }
  ],

  "redirects": [
    { "source": "/getting-started", "destination": "/getting-started.html", "permanent": false },
    { "source": "/tooling-setup",   "destination": "/tooling-setup.html",   "permanent": false },
    { "source": "/cicd-pipelines",  "destination": "/cicd-pipelines.html",  "permanent": false },
    { "source": "/",                "destination": "/index.html",           "permanent": false }
  ],

  "headers": [
    {
      "source": "/styles.css",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=3600" }]
    },
    {
      "source": "/public/(.*)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    },
    {
      "source": "/(.*)\\.(css|js|png|jpg|jpeg|gif|svg|webp|ico|woff|woff2|ttf|eot)",
      "headers": [{ "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }]
    }
  ]
}