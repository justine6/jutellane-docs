{
  "cleanUrls": true,
  "trailingSlash": false,

  "redirects": [
    { "source": "/public/:path*", "destination": "/:path*", "permanent": true }
  ],

  "headers": [
    {
      "source": "/:all*(css|js|png|jpg|jpeg|svg|ico)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
